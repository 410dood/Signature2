<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.olari.widget.custom.signature.Signature" pluginWidget="true" needsEntityContext="true" offlineCapable="true" supportedPlatform="Web" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Signature</name>
    <description>React compatible version of signature widget.</description>
    <icon>
        
    </icon>
    <properties>
        <property key="dataSource" type="datasource" isList="true" required="true">
            <caption>Data source</caption>
            <category>Data</category>
            <description />
        </property>
        <property key="signatureMode" type="enumeration" defaultValue="draw">
            <caption>Signature mode</caption>
            <category>Signature</category>
            <description>Choose the default signature mode.</description>
            <enumerationValues>
                <enumerationValue key="draw">Draw</enumerationValue>
                <enumerationValue key="type">Type</enumerationValue>
            </enumerationValues>
        </property>
        <property key="showModeToggle" type="boolean" defaultValue="true">
            <caption>Show mode toggle</caption>
            <category>Signature</category>
            <description>Allow users to switch between draw and type.</description>
        </property>
        <property key="typeFontFamily" type="string" defaultValue="cursive">
            <caption>Type font family</caption>
            <category>Type</category>
            <description>CSS font-family used for typed signatures.</description>
        </property>
        <property key="typeFontSize" type="integer" defaultValue="32">
            <caption>Type font size</caption>
            <category>Type</category>
            <description>Font size for typed signatures (pixels).</description>
        </property>
        <property key="typePlaceholder" type="string" defaultValue="Type your name">
            <caption>Type placeholder</caption>
            <category>Type</category>
            <description>Placeholder text for the typed signature input.</description>
        </property>
        <property key="penType" type="enumeration" defaultValue="fountain">
            <caption>Type</caption>
            <category>Pen</category>
            <description />
            <enumerationValues>
                <enumerationValue key="fountain">Fountain pen</enumerationValue>
                <enumerationValue key="ballpoint">Ball point pen</enumerationValue>
                <enumerationValue key="marker">Highlight marker</enumerationValue>
            </enumerationValues>
        </property>
        <property key="penColor" type="string" defaultValue="#000">
            <caption>Color</caption>
            <category>Pen</category>
            <description>Color of the line e.g. green, #00FF00, rgb(0,255,0)</description>
        </property>
        <property key="hasSignatureAttribute" type="expression" required="false" dataSource="dataSource">
            <caption>Has signature</caption>
            <category>Canvas</category>
            <description>Optional boolean expression. When the expression evaluates to false, the signature is cleared, but will not clear the stored image.</description>
            <returnType type="Boolean" />
        </property>
        <property key="showClearButton" type="boolean" defaultValue="false">
            <caption>Show clear button</caption>
            <category>Canvas</category>
            <description>Show a clear button that clears the canvas without deleting the stored image.</description>
        </property>
        <property key="showSaveButton" type="boolean" defaultValue="false">
            <caption>Show save button</caption>
            <category>Save</category>
            <description>Show a save button.</description>
        </property>
        <property key="saveButtonCaption" type="textTemplate" required="false" dataSource="dataSource">
            <caption>Save button caption</caption>
            <category>Save</category>
            <description>Caption for the save button.</description>
        </property>
        <property key="saveButtonCaptionDefault" type="string" defaultValue="Save">
            <caption>Save caption fallback</caption>
            <category>Save</category>
            <description>Fallback caption used when no text template value is available.</description>
        </property>
        <property key="onSaveAction" type="action" required="false" dataSource="dataSource">
            <caption>On save</caption>
            <category>Save</category>
            <description>Action to execute when the save button is clicked.</description>
        </property>
        <property key="showHeader" type="boolean" defaultValue="false">
            <caption>Show header</caption>
            <category>Header</category>
            <description>Show a header/label above the signature.</description>
        </property>
        <property key="headerText" type="textTemplate" required="false" dataSource="dataSource">
            <caption>Header text</caption>
            <category>Header</category>
            <description>Header text shown above the signature.</description>
        </property>
        <property key="headerTextDefault" type="string" defaultValue="By my signature below, I certify that I have read, understood and fully agree to each of the statements in this document and sign below freely and voluntarily.">
            <caption>Header fallback</caption>
            <category>Header</category>
            <description>Fallback header text used when no text template value is available.</description>
        </property>
        <property key="showWatermark" type="boolean" defaultValue="false">
            <caption>Show watermark</caption>
            <category>Watermark</category>
            <description>Show a watermark below the signature after signing.</description>
        </property>
        <property key="base64Attribute" type="attribute" required="false" dataSource="dataSource">
            <caption>Base64 attribute</caption>
            <category>Data</category>
            <description>Optional string attribute to store the base64 signature data.</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="watermarkAttribute" type="attribute" required="false" dataSource="dataSource">
            <caption>Watermark text</caption>
            <category>Watermark</category>
            <description>String attribute used for the watermark text.</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="widthUnit" type="enumeration" defaultValue="percentage">
            <caption>Width unit</caption>
            <category>Canvas</category>
            <description />
            <enumerationValues>
                <enumerationValue key="percentage">Percentage</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
            </enumerationValues>
        </property>
        <property key="width" type="integer" defaultValue="100">
            <caption>Width</caption>
            <category>Canvas</category>
            <description />
        </property>
        <property key="heightUnit" type="enumeration" defaultValue="percentageOfWidth">
            <caption>Height unit</caption>
            <category>Canvas</category>
            <description>'Percentage of width' is the aspect ratio, 'Pixels' is absolute. Warning: When using 'Percentage of parent' the parent container must have an absolute height, else nothing is displayed.</description>
            <enumerationValues>
                <enumerationValue key="percentageOfWidth">Percentage of width</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentageOfParent">Percentage of parent</enumerationValue>
            </enumerationValues>
        </property>
        <property key="height" type="integer" defaultValue="50">
            <caption>Height</caption>
            <category>Canvas</category>
            <description />
        </property>
        <property key="showGrid" type="boolean" defaultValue="false">
            <caption>Show background grid</caption>
            <category>Grid</category>
            <description />
        </property>
        <property key="gridBorderColor" type="string" defaultValue="#D7D7D7">
            <caption>Line color</caption>
            <category>Grid</category>
            <description />
        </property>
        <property key="gridCellHeight" type="integer" defaultValue="50">
            <caption>Cell height</caption>
            <category>Grid</category>
            <description>Grid column size</description>
        </property>
        <property key="gridCellWidth" type="integer" defaultValue="50">
            <caption>Cell width</caption>
            <category>Grid</category>
            <description>Grid row size</description>
        </property>
        <property key="gridBorderWidth" type="integer" defaultValue="1">
            <caption>Line width</caption>
            <category>Grid</category>
            <description>Grid border line width (pixels)</description>
        </property>
        <systemProperty key="Editability" />
    </properties>
</widget>
